<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ImageView-->
        <!--android:id="@+id/imageView"-->
        <!--android:layout_width="768dp"-->
        <!--android:layout_height="768dp"-->
        <!--android:src="@mipmap/pay_ad"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintLeft_toLeftOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->


    <com.mei.chaji.ui.other.Banners
        android:id="@+id/banner"
        android:layout_marginLeft="30dp"
        android:layout_width="768dp"
        android:layout_height="500dp"
        android:src="@mipmap/pay_ad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_hot_tea"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:background="@mipmap/check_tm_nor"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/tm_corner1"
        app:layout_constraintLeft_toLeftOf="@+id/tm_corner1"
        app:layout_constraintRight_toRightOf="@+id/tm_corner1"
        app:layout_constraintTop_toTopOf="@id/tm_corner1" />

    <TextView
        android:id="@+id/tv_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_hot_tea"
        app:layout_constraintLeft_toLeftOf="@+id/iv_hot_tea"
        app:layout_constraintRight_toRightOf="@+id/iv_hot_tea"
        app:layout_constraintTop_toTopOf="@+id/iv_hot_tea" />


    <ImageView
        android:id="@+id/tm_corner1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:src="@mipmap/check_bg"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@+id/qr_code_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_warm_tea"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/check_tm_nor"
        app:layout_constraintBottom_toBottomOf="@+id/tm_corner2"
        app:layout_constraintLeft_toLeftOf="@+id/tm_corner2"
        app:layout_constraintRight_toRightOf="@id/tm_corner2"
        app:layout_constraintTop_toTopOf="@id/tm_corner2" />

    <TextView
        android:id="@+id/tv_warm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_warm_tea"
        app:layout_constraintLeft_toLeftOf="@+id/iv_warm_tea"
        app:layout_constraintRight_toRightOf="@+id/iv_warm_tea"
        app:layout_constraintTop_toTopOf="@+id/iv_warm_tea" />

    <ImageView
        android:id="@+id/tm_corner2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:src="@mipmap/check_bg"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/tm_corner1"
        app:layout_constraintRight_toRightOf="@id/tm_corner3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_ordinarytm_tea"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@mipmap/check_tm_nor"
        app:layout_constraintBottom_toBottomOf="@id/tm_corner3"
        app:layout_constraintLeft_toLeftOf="@+id/tm_corner3"
        app:layout_constraintRight_toRightOf="@id/tm_corner3"
        app:layout_constraintTop_toTopOf="@id/tm_corner3" />

    <TextView
        android:id="@+id/tv_ordinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="常温"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_ordinarytm_tea"
        app:layout_constraintLeft_toLeftOf="@+id/iv_ordinarytm_tea"
        app:layout_constraintRight_toRightOf="@+id/iv_ordinarytm_tea"
        app:layout_constraintTop_toTopOf="@+id/iv_ordinarytm_tea" />

    <ImageView
        android:id="@+id/tm_corner3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:src="@mipmap/check_bg"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/qr_code_bg"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/qr_code_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/qr_code_bg"
        app:layout_constraintLeft_toRightOf="@id/banner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tm_corner1" />

    <ImageView
        android:id="@+id/iv_wx_qr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="@id/qr_code_bg"
        app:layout_constraintTop_toTopOf="@id/qr_code_bg" />

    <ImageView
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/weixin"
        app:layout_constraintBottom_toBottomOf="@+id/qr_code_bg"
        app:layout_constraintLeft_toLeftOf="@+id/iv_wx_qr"
        app:layout_constraintRight_toRightOf="@+id/iv_wx_qr" />


    <ImageView
        android:id="@+id/iv_ali_qr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="@id/qr_code_bg"
        app:layout_constraintTop_toTopOf="@+id/qr_code_bg" />

    <ImageView
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/zhifubao"
        app:layout_constraintBottom_toBottomOf="@id/qr_code_bg"
        app:layout_constraintLeft_toLeftOf="@+id/iv_ali_qr"
        app:layout_constraintRight_toRightOf="@+id/iv_ali_qr" />

    <Button
        android:id="@+id/btn_face_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@mipmap/iv_face_shape"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_10"
        android:text="人脸支付"
        android:textSize="20sp"
        android:textColor="#111111"
        app:layout_constraintLeft_toRightOf="@id/iv_wx_qr"
        app:layout_constraintRight_toLeftOf="@+id/iv_ali_qr"
        app:layout_constraintTop_toBottomOf="@+id/qr_code_bg" />


</android.support.constraint.ConstraintLayout>