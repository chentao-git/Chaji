<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_50"
    tools:context=".ui.main.activity.OpsActivity">

    <TextView
        android:id="@+id/tea_name"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:background="@drawable/shape_dotted_line"
        android:gravity="top|center_horizontal"
        android:text="红豆薏仁茶"
        android:textSize="20sp"
        android:paddingTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tea_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20sp"
        android:text="价格:1.00"
        android:paddingBottom="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@id/tea_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>